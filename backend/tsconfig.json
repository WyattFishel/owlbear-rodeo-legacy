{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "pretty": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "module": "EsNext",
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*",
    "ice.json"
  ],
  "exclude": [
    "node_modules/**/*",
    "./build/**/*"
  ]
}